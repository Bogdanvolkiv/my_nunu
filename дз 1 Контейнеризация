#!/bin/bash

# –°–∫—Ä–∏–ø—Ç –∑–∞–ø—É—Å–∫–∞–µ—Ç bash –≤ –∏–∑–æ–ª–∏—Ä–æ–≤–∞–Ω–Ω–æ–π —Å—Ä–µ–¥–µ —Å –æ—Ç–¥–µ–ª—å–Ω—ã–º–∏ –ø—Ä–æ—Å—Ç—Ä–∞–Ω—Å—Ç–≤–∞–º–∏ –∏–º—ë–Ω

echo "üîß –ó–∞–ø—É—Å–∫ bash –≤ –∏–∑–æ–ª–∏—Ä–æ–≤–∞–Ω–Ω—ã—Ö –ø—Ä–æ—Å—Ç—Ä–∞–Ω—Å—Ç–≤–∞—Ö –∏–º—ë–Ω..."
sudo unshare --mount --uts --ipc --net --pid --fork bash <<'EOF'

echo -e "\n‚úÖ –í—ã –Ω–∞—Ö–æ–¥–∏—Ç–µ—Å—å –≤ –∏–∑–æ–ª–∏—Ä–æ–≤–∞–Ω–Ω–æ–π —Å—Ä–µ–¥–µ"
echo "–¢–µ–∫—É—â–∏–π hostname:"
hostname

echo -e "\nüìõ –ú–µ–Ω—è–µ–º hostname –Ω–∞ isolated-env"
hostname isolated-env
echo "–¢–µ–ø–µ—Ä—å hostname:"
hostname

echo -e "\nüß† –ü—Ä–æ–≤–µ—Ä–∏–º –ø—Ä–æ—Ü–µ—Å—Å—ã (–¥–æ–ª–∂–Ω—ã –±—ã—Ç—å —Ç–æ–ª—å–∫–æ —Ç–µ–∫—É—â–∏–µ):"
ps aux

echo -e "\nüóÇÔ∏è –ú–æ–Ω—Ç–∏—Ä—É–µ–º –≤—Ä–µ–º–µ–Ω–Ω—É—é —Ñ–∞–π–ª–æ–≤—É—é —Å–∏—Å—Ç–µ–º—É tmpfs –≤ /mnt/tmp"
mkdir -p /mnt/tmp
mount -t tmpfs none /mnt/tmp
echo "–°–æ–¥–µ—Ä–∂–∏–º–æ–µ /mnt:"
ls /mnt

echo -e "\nüåê –°–µ—Ç–µ–≤—ã–µ –∏–Ω—Ç–µ—Ä—Ñ–µ–π—Å—ã (–∏–∑–æ–ª–∏—Ä–æ–≤–∞–Ω–Ω—ã–µ):"
ip a

echo -e "\nüåê –ü–∏–Ω–≥—É–µ–º localhost:"
ping -c 2 127.0.0.1

echo -e "\nüì¶ –ü—Ä–æ–≤–µ—Ä–∏–º, –∫–∞–∫–∏–µ –ø—Ä–æ—Å—Ç—Ä–∞–Ω—Å—Ç–≤–∞ –∏–º—ë–Ω –∞–∫—Ç–∏–≤–Ω—ã (lsns):"
lsns | grep $$

echo -e "\nüö™ –í—ã—Ö–æ–¥ –∏–∑ –∏–∑–æ–ª–∏—Ä–æ–≤–∞–Ω–Ω–æ–π —Å—Ä–µ–¥—ã"
exit
EOF
